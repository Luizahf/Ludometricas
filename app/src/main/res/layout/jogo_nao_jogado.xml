<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_purple">

    <TextView
        android:id="@+id/caixa_jogo_nao_jogado"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:background="#C3D3D3D3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_jogo_nao_jogado_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text='Clique em "Jogar" para começar sua primeira jogatina'
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/caixa_jogo_nao_jogado"
        app:layout_constraintStart_toStartOf="@+id/caixa_jogo_nao_jogado"
        app:layout_constraintTop_toBottomOf="@+id/txt_jogo_nao_jogado_1" />

    <TextView
        android:id="@+id/txt_jogo_nao_jogado_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Você ainda nao jogou esse jogo! "
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/caixa_jogo_nao_jogado"
        app:layout_constraintTop_toTopOf="@+id/caixa_jogo_nao_jogado" />


</androidx.constraintlayout.widget.ConstraintLayout>