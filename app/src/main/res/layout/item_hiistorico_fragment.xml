<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_purple">

    <ImageView
        android:id="@+id/card_jogatina"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caixa_cinza_boarda_redonda" />

    <TextView
        android:id="@+id/txt_data_historico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="28/10/2020"
        android:textColor="#FAFBFD"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/card_jogatina"
        app:layout_constraintTop_toTopOf="@+id/card_jogatina" />

    <TextView
        android:id="@+id/text_mecanica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="MecÃ¢nica: "
        android:textColor="#69748C"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_componentes"
        app:layout_constraintStart_toStartOf="@+id/card_jogatina" />

    <TextView
        android:id="@+id/nota_mecanica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#69748C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_mecanica"
        app:layout_constraintStart_toEndOf="@+id/text_mecanica" />

    <TextView
        android:id="@+id/text_componentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Componentes: "
        android:textColor="#69748C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_jogatina"
        app:layout_constraintStart_toStartOf="@+id/text_mecanica"
        app:layout_constraintTop_toTopOf="@+id/card_jogatina" />

    <TextView
        android:id="@+id/nota_componentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.82"
        android:textColor="#69748C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_componentes"
        app:layout_constraintStart_toEndOf="@+id/text_componentes" />

    <TextView
        android:id="@+id/text_experiencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Experiencia: "
        android:textColor="#69748C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/text_componentes"
        app:layout_constraintTop_toBottomOf="@+id/text_componentes" />

    <TextView
        android:id="@+id/nota_experiencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.73"
        android:textColor="#69748C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_experiencia"
        app:layout_constraintStart_toEndOf="@+id/text_experiencia" />


    <ImageView
        android:id="@+id/circulo_amarelo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_jogatina"
        app:layout_constraintEnd_toEndOf="@+id/card_jogatina"
        app:srcCompat="@drawable/circulo_amarelo" />

    <TextView
        android:id="@+id/nota_total_historico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="9,25"
        android:textColor="#FFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/circulo_amarelo"
        app:layout_constraintEnd_toEndOf="@+id/circulo_amarelo"
        app:layout_constraintStart_toStartOf="@+id/circulo_amarelo"
        app:layout_constraintTop_toTopOf="@+id/circulo_amarelo" />

</androidx.constraintlayout.widget.ConstraintLayout>