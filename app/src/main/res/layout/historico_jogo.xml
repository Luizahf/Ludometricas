<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_purple">

    <TextView
        android:id="@+id/caixa_nota_geral"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#C3D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caixa_notas_categorias"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:background="#C3D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caixa_nota_geral" />

    <TextView
        android:id="@+id/txt_nota_geral_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foram "
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_nota_geral_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_nota_geral_1" />

    <TextView
        android:id="@+id/txt_nota_geral_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cada jogo dura em média "
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_nota_geral_2"
        app:layout_constraintTop_toBottomOf="@+id/jogatinas" />

    <TextView
        android:id="@+id/txt_nota_geral_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="A nota média desse jogo é "
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/circulo_amarelo"
        app:layout_constraintTop_toTopOf="@+id/circulo_amarelo" />

    <TextView
        android:id="@+id/txt_notas_categorias_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Essas sao as médias das notas até agora:"
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/circulo_amarelo"
        app:layout_constraintStart_toStartOf="@+id/caixa_notas_categorias"
        app:layout_constraintTop_toTopOf="@+id/caixa_notas_categorias" />

    <TextView
        android:id="@+id/txt_nota_geral_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" jogatinas até hoje!"
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/jogatinas"
        app:layout_constraintStart_toEndOf="@+id/jogatinas" />

    <TextView
        android:id="@+id/nota_total_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9,25"
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nota_geral_1"
        app:layout_constraintStart_toEndOf="@+id/txt_nota_geral_1" />

    <TextView
        android:id="@+id/txt_notas_categoria_mecanica"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Mecânica"
        android:textAlignment="gravity"
        android:textColor="#69748C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/caixa_notas_categorias"
        app:layout_constraintTop_toBottomOf="@+id/nota_mecanica" />

    <TextView
        android:id="@+id/nota_componentes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="10"
        android:textAlignment="center"
        android:textColor="#69748C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_notas_categoria_componentes"
        app:layout_constraintStart_toStartOf="@+id/txt_notas_categoria_componentes"
        app:layout_constraintTop_toBottomOf="@+id/txt_notas_categorias_1" />

    <TextView
        android:id="@+id/nota_mecanica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="9,8"
        android:textAlignment="center"
        android:textColor="#69748C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_notas_categoria_mecanica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txt_notas_categoria_mecanica"
        app:layout_constraintTop_toTopOf="@+id/nota_componentes" />

    <TextView
        android:id="@+id/nota_experiencia"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:text="9"
        android:textColor="#69748C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_notas_categoria_experiencia"
        app:layout_constraintStart_toStartOf="@+id/txt_notas_categoria_experiencia"
        app:layout_constraintTop_toTopOf="@+id/nota_componentes" />

    <TextView
        android:id="@+id/txt_notas_categoria_componentes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:text="Componentes"
        android:textAlignment="gravity"
        android:textColor="#69748C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_notas_categoria_experiencia"
        app:layout_constraintStart_toEndOf="@+id/txt_notas_categoria_mecanica"
        app:layout_constraintTop_toBottomOf="@+id/nota_componentes" />

    <TextView
        android:id="@+id/txt_notas_categoria_experiencia"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Experiência"
        android:textAlignment="gravity"
        android:textColor="#69748C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/caixa_notas_categorias"
        app:layout_constraintTop_toBottomOf="@+id/nota_experiencia" />

    <TextView
        android:id="@+id/jogatinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="11"
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nota_geral_2"
        app:layout_constraintStart_toEndOf="@+id/txt_nota_geral_2" />

    <TextView
        android:id="@+id/tempo_medio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="1h 43min"
        android:textColor="#69748C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nota_geral_4"
        app:layout_constraintStart_toEndOf="@+id/txt_nota_geral_4" />

    <ImageView
        android:id="@+id/circulo_amarelo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/caixa_nota_geral"
        app:layout_constraintStart_toStartOf="@+id/caixa_nota_geral"
        app:layout_constraintTop_toTopOf="@+id/caixa_nota_geral"
        app:srcCompat="@drawable/circulo_amarelo" />

    <TextView
        android:id="@+id/nota_total_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="9,25"
        android:textColor="#FFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/circulo_amarelo"
        app:layout_constraintEnd_toEndOf="@+id/circulo_amarelo"
        app:layout_constraintStart_toStartOf="@+id/circulo_amarelo"
        app:layout_constraintTop_toTopOf="@+id/circulo_amarelo" />

</androidx.constraintlayout.widget.ConstraintLayout>