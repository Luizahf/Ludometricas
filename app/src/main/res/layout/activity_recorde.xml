<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_purple"
    tools:context=".presentation.jogo.recorde.RecordeActivity">


    <EditText
        android:id="@+id/nota_recorde"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#D1D1D1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/nota_txt"
        app:layout_constraintTop_toBottomOf="@+id/nota_txt" />

    <TextView
        android:id="@+id/nota_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nota"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/responsavel_recorde"
        app:layout_constraintTop_toBottomOf="@+id/responsavel_recorde" />

    <ImageView
        android:id="@+id/circulo_amarelo3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circulo_amarelo" />

    <TextView
        android:id="@+id/recorde_titulo_jogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#B8B8B8"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Conquistadores de Midgard"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recorde_titulo_pagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Recorde!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recorde_titulo_jogo" />

    <TextView
        android:id="@+id/responsavel_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text="ResponsÃ¡vel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recorde_titulo_pagina" />

    <TextView
        android:id="@+id/responsavel_recorde_antigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Lulu"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/recorde_titulo_pagina"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/recorde_titulo_pagina" />

    <TextView
        android:id="@+id/nota_recorde_antigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="100"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/responsavel_recorde_antigo"
        app:layout_constraintTop_toTopOf="@+id/responsavel_recorde_antigo" />

    <EditText
        android:id="@+id/responsavel_recorde"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#D1D1D1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/responsavel_txt"
        app:layout_constraintTop_toBottomOf="@+id/responsavel_txt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recorde_titulo_pagina"
        app:layout_constraintEnd_toStartOf="@+id/recorde_titulo_pagina"
        app:layout_constraintTop_toTopOf="@+id/recorde_titulo_pagina"
        app:srcCompat="@drawable/trofeu_estrela_icn_branco" />

    <ImageView
        android:id="@+id/check_recorde"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/circulo_amarelo3"
        app:layout_constraintEnd_toEndOf="@+id/circulo_amarelo3"
        app:layout_constraintStart_toStartOf="@+id/circulo_amarelo3"
        app:layout_constraintTop_toTopOf="@+id/circulo_amarelo3"
        app:srcCompat="?android:attr/textCheckMark" />

</androidx.constraintlayout.widget.ConstraintLayout>